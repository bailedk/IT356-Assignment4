<scene>
	<instance name="sphere" path="models/sphere" />
	<instance name="box" path="models/box" />
	<instance name="cylinder" path="models/cylinder" />
	<instance name="cone" path="models/cone" />
	
	<transform BB="true">
		<set>
			<scale>2 2 2 </scale>
		</set>
		<group name="ride">
			<group>
				<transform>
					<set>
					</set>
					<group>
						<transform name="base">
							<set>
								<scale>10 2 10 </scale>
							</set>
							<object instanceof="cylinder" BB="true" >
								<material>
									<color>0 1 0</color>
								</material>
							</object>
						</transform>
						<transform name="basepole">
							<set>
								<scale>2 15 2 </scale>
								<translate>0 2 0 </translate>
							</set>
							<object instanceof="cylinder">
								<material>
									<color>0 1 0</color>
								</material>
							</object>
						</transform>
						<transform name="spinner">
							<set>
								<translate>0 19 0 </translate>
							</set>
							<group BB="true">
								<transform name="top">
									<set>
										<scale>5 4 5 </scale>
									</set>
									<object instanceof="sphere">
										<material>
											<color>0 1 0</color>
										</material>
									</object>
								</transform>
								<transform>
									<set>
										<rotate>90 1 0 0</rotate>
									</set>
									<group>
										<transform name="pole1">
											<set>
											</set>
											<group name="poleAssembly">
												<transform>
													<set>
														<!-- Transform pole -->
														<scale>1 20 1 </scale>
													</set>
													<object instanceof="cylinder">
														<material>
															<color>0 1 0</color>
														</material>
													</object>
												</transform>
												<transform name="chair1">
													<set>
														<!-- Transform Chair 1 -->
														<rotate>90 0 0 1</rotate>
														<translate>0 20.5 0</translate>
														<rotate>-90 0 1 0</rotate>
														
														
													</set>
													<group name="chair">
														<transform name="chair1back">
															<set>
																<!-- Transform Chair 1 Back -->
																<scale>1 5 4</scale> 
															</set>
															<object instanceof="box">
																<material>
																	<color>0 0 1</color>
																</material>
															</object>
														</transform>
														<transform name="chair1seat">
															<set>

																<scale>5 2 4</scale>
																<translate>2 -3.5 0</translate> 
															</set>
															<object instanceof="box">
																<material>
																	<color>1 0 0</color>
																</material>
															</object>
														</transform>
													</group>
												</transform>
											</group>
										</transform>
									</group>
								</transform>
								<transform>
									<set>
										<rotate>-180 0 1 0</rotate>
										<rotate>-90 1 0 0</rotate>
									</set>
									<transform name="pole2">
										<set>
										</set>
										<group copyof="poleAssembly" />
									</transform>
								</transform>
								<transform>
									<set>
										<rotate>-90 0 1 0</rotate>
										<rotate>90 0 0 1</rotate>
									</set>
									<transform name="pole3">
										<set>
										</set>
										<group copyof="poleAssembly" />
									</transform>
								</transform>
								<transform>
									<set>
										<rotate>90 0 1 0</rotate>
										<rotate>-90 0 0 1</rotate>
									</set>
									<transform name="pole4">
										<set>
										</set>
										<group copyof="poleAssembly" />
									</transform>
								</transform>
							</group>
						</transform>
					</group>
				</transform>
			</group>
		</group>
	</transform>
</scene>